<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:DotHome.Config.Views;assembly=DotHome.Config"
			 xmlns:tool="clr-namespace:DotHome.Config.Tools"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DotHome.Config.Views.RefSinkView">
	<Grid Background="Green" ColumnDefinitions="*,*">
		<local:InputView x:Name="inputView" Grid.Column="0" PointerPressed="Input_PointerPressed" PointerReleased="Input_PointerReleased" AttachedToVisualTree="Input_AttachedToVisualTree" DetachedFromVisualTree="Input_DetachedFromVisualTree"/>
		<TextBlock Text="{Binding Reference}" x:Name="textBlock" Grid.Column="1"/>
	</Grid>
</UserControl>
