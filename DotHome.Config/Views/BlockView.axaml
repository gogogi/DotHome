<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:DotHome.Config.Views;assembly=DotHome.Config"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DotHome.Config.Views.BlockView"
			 Padding="2" Background="Gray">
	<Grid RowDefinitions="*,*" ColumnDefinitions="*,*" Background="LightSlateGray">
		<TextBlock Text="{Binding Definition.Name}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontWeight="Bold"/>
		<!--<StackPanel x:Name="stackPanelInputs" Grid.Row="1" Grid.Column="0"/>-->
		<!--<StackPanel x:Name="stackPanelOutputs" Grid.Row="1" Grid.Column="1"/>-->
		<ItemsControl Grid.Row="1" Grid.Column="0" Items="{Binding Inputs}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<local:InputView/>						
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</UserControl>
