@page "/Categories/{CategoryName}"

@if (category != null)
{
    <h3>@category.Name</h3>
}
else
{
    <h3>Category '@category.Name' does not exist</h3>
}


@if (visualBlocks != null)
{
    <RadzenDataList WrapItems="true" Data="visualBlocks">
        <Template>
            <GenericBlockComponent Block="context" />
        </Template>
    </RadzenDataList>
}
else
{

}