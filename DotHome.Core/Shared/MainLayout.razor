            </div>-->
        </div>
    </ChildContent>
</RadzenHeader>
<div style="width:100%">
    <RadzenBody Expanded="@(!sidebarExpanded)">
        <ChildContent>
            <RadzenContentContainer Name="main">
                @Body
            </RadzenContentContainer>
        </ChildContent>
    </RadzenBody>
</div>
<RadzenSidebar @bind-Expanded="sidebarExpanded">
    <ChildContent>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Rooms">
                @foreach (var room in rooms)
                {
                    <RadzenPanelMenuItem Text="@room.Name" Path="@($"Rooms/{room.Name}")" />
                }
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Categories">
                @foreach (var category in categories)
                {
                    <RadzenPanelMenuItem Text="@category.Name" Path="@($"Categories/{category.Name}")" />
                }
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </ChildContent>
</RadzenSidebar>    


<style>
    .rz-sidebar {
        bottom: 0 !important;
    }
</style>