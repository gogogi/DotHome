<RadzenHeader>
    <ChildContent>
        <div class="row justify-content-start align-items-center">
            <div class="col-6 d-flex align-items-center">
                <RadzenSidebarToggle Click="@(args => { sidebarExpanded = !sidebarExpanded; })">
                </RadzenSidebarToggle>
                <RadzenLabel Text="DotHome">
                </RadzenLabel>
            </div>
